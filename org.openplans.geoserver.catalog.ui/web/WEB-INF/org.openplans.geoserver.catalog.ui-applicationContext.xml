<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- controller for handling all incoming requests -->
	<bean id="newDataStoreController" 
		class="org.openplans.geoserver.catalog.ui.internal.NewDataStoreController">

	</bean>

	<!-- url mappings -->		
	<bean id="org.openplans.geoserver.catalog.ui.urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="newDataStore.gs">newDataStoreController</prop>
			</props>
		</property>
	</bean>
	
</beans>