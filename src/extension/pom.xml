<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.geoserver</groupId>
    <artifactId>geoserver</artifactId>
    <version>1.7.7-SNAPSHOT</version>
  </parent>

  <groupId>org.geoserver</groupId>
  <artifactId>extension</artifactId>
  <packaging>pom</packaging>
  <name>GeoServer Extensions</name>

  <dependencies>
    <dependency>
      <groupId>org.geoserver</groupId>
      <artifactId>platform</artifactId>
      <version>1.7.7-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <profiles>
    <!-- profiles for individual modules -->
    <profile>
      <id>h2</id>
      <modules>
        <module>h2</module>
      </modules>
    </profile>
    
    <profile>
      <id>sqlserver</id>
      <modules>
        <module>sqlserver</module>
      </modules>
    </profile>

    <profile>
      <id>oracle</id>
      <modules>
        <module>oracle</module>
      </modules>
    </profile>

    <profile>
      <id>arcsde</id>
      <modules>
        <module>arcsde</module>
      </modules>
    </profile>

    <profile>
      <id>wfsv</id>
      <modules>
        <module>wfsv</module>
      </modules>
    </profile>

    <profile>
      <id>db2</id>
      <modules>
        <module>db2</module>
      </modules>
    </profile>

    <profile>
      <id>imagemosaic-jdbc</id>
      <modules>
        <module>imagemosaic-jdbc</module>
      </modules>
    </profile>

    <profile>
      <id>feature-pregeneralized</id>
      <modules>
        <module>feature-pregeneralized</module>
      </modules>
    </profile>


    <profile>
      <id>imagemap</id>
      <modules>
        <module>imagemap</module>
      </modules>
    </profile>
    
    <profile>
      <id>ogr</id>
      <modules>
        <module>ogr</module>
      </modules>
    </profile>
    
    <profile>
      <id>excel</id>
      <modules>
        <module>excel</module>
      </modules>
    </profile>

    <profile>
      <id>restconfig</id>
      <modules>
        <module>restconfig</module>
      </modules>
    </profile>

    <profile>
      <id>geosearch</id>
      <modules>
        <module>geosearch</module>
      </modules>
    </profile>

    <profile>
      <id>charts</id>
      <modules>
        <module>charts</module>
      </modules>
    </profile>

    <!-- allExtensions profile, includes all modules -->

    <profile>
      <id>allExtensions</id>
      <modules>
        <module>arcsde</module>
        <module>h2</module>
        <module>sqlserver</module>
        <module>oracle</module>
        <module>wfsv</module>
        <module>db2</module>
	<module>feature-pregeneralized</module>
	<module>imagemosaic-jdbc</module>
        <module>imagemap</module>
        <module>ogr</module>
        <module>excel</module>
        <module>restconfig</module>
        <module>geosearch</module>
        <module>charts</module>
      </modules>
    </profile>

    <!-- release profile, includes all modules -->
    <!-- TODO: perhaps figure a way to trigger the allExtensions profile
         instead of copying all the modules -->
    <profile>
      <id>release</id>
      <modules>
        <module>arcsde</module>
        <module>h2</module>
        <module>sqlserver</module>
        <module>oracle</module>
        <module>wfsv</module>
        <module>db2</module>
        <module>feature-pregeneralized</module>
	<module>imagemosaic-jdbc</module>
        <module>imagemap</module>
        <module>ogr</module>
        <module>excel</module>
        <module>restconfig</module>
        <module>geosearch</module>
        <module>charts</module>
      </modules>
    </profile>
  </profiles>
</project>
