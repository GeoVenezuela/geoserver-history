<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="exceptionThrowingResource" class="org.geoserver.rest.ExceptionThrowingResource">
    </bean>
    <bean id="exceptionFinder" class="org.geoserver.rest.BeanResourceFinder">
      <constructor-arg value="exceptionThrowingResource"/>
    </bean>
    
    <bean id="testMapping" class="org.geoserver.rest.RESTMapping">
      <property name="routes">
        <map>
          <entry>
            <key><value>/exception?{query}</value></key>
            <value>exceptionFinder</value>
          </entry>
        </map>
      </property>
    </bean>
</beans>
