<?config.xml version="1.0" encoding="UTF-8"?>
<catalog>
<datastores>
<!--
a datastore configuration element serves as a common data source connection
parameters repository for all featuretypes it holds.
-->
    <datastore id="bc_shapefile"
               enabled="true"
               namespace="topp">
      <description>British Columbia sample road shapefiles</description>
      <connectionParams>
        <!-- For now the url value is relative to where GeoServer moves the -->
        <!-- featureTypes directory.  Everything in featureTypes moves to   -->
        <!-- data, so just put the relative location.  -->
        <parameter name="url" 
                   value="file:data/featureTypes/bc_roads/bc_roads.shp"/>
      </connectionParams>
    </datastore>
    <datastore id="dSkae"
               enabled="true"
               namespace="lake">
      <description>Sample source data for lakes. Should not pass all 
                   validations.</description>
      <connectionParams>
        <parameter name="url" 
                   value="file:data/featureTypes/skae_lakes/skae_lakes.shp"/>
      </connectionParams>
    </datastore>
    
<datastore namespace = "gd" enabled = "true" id = "rivers" >
<abstract>Rivers</abstract>
<connectionParams>
<parameter value = "gd" name = "namespace"  />
<parameter value = "file:data/geoserverdemo/rivers.shp" name = "url"  />
</connectionParams>
</datastore>
