<?xml version="1.0" encoding="UTF-8"?>

<!-- This is the minimum information you'll need to run the cite tests.
     You'll have to change the URL tag to the location of your servlet
     container.  If you already have a configuration file you can just
     add the cgf and cdf namespace elements.  If your featureTypes 
     directory has more than cdf and cgf types then be sure that those
     types have schema.xml files that will validate as XMLSchemas. -->

<GlobalConfiguration>
                <Name>Cite Test Server</Name>
                <Title>A server to test CITE conformance</Title>
                <OnlineResource>http://www.openplans.org/</OnlineResource>
                <Fees>NONE</Fees>
                <AccessConstraints>NONE</AccessConstraints>
                <URL>http://beta.openplans.org/geoserver</URL>
                <Verbose value="true"/>
                <Namespace uri="http://www.opengis.net/cite/geometry"
                           prefix="cgf"/>
                <Namespace uri="http://www.opengis.net/cite/data"
                           prefix="cdf"/>
</GlobalConfiguration>
