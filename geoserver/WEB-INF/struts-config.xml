        <action
        	path="/WFSConfigMenu"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="wfs.description"/>
        <action
        	path="/WMSConfigMenu"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="wms.description"/>        
        <action
        	path="/CatalogConfigMenu"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="catalog.datastores"/>        
        	
        <action
        	path="/WFSConfigDescription"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="wfs.description"/>
        <action
        	path="/WFSConfigContent"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="wfs.content"/>

        <action
        	path="/WMSConfigDescription"
        	type="org.apache.struts.actions.ForwardAction"
        	parameter="wms.description"/>
        <action
