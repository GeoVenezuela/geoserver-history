        <!-- Default forward to "Welcome" action -->
        <!-- Demonstrates using index.jsp to forward -->
        <forward
            name="welcome"
            path="/Welcome.do"/>
           
        <forward 
        	name="mainmenu"
        	path="/MainMenu.do"/>
       	<forward
       		name="systemConfigMenu"
       		path="/SystemConfigMenu.do"/>
       	<forward
       		name="wfsConfigMenu"
       		path="/WFSConfigMenu.do"/>
       	<forward
       		name="wmsConfigMenu"
       		path="/WMSConfigMenu.do"/>
       	<forward
       		name="catalogConfigMenu"
       		path="/CatalogConfigMenu.do"/>
       		
       	<forward
       		name="wfsConfigDescription"
       		path="/WFSConfigDescription.do"/>
       	<forward
       		name="wfsConfigContent"
       		path="/WFSConfigContent.do"/>
       		
       	<forward
       		name="wmsConfigDescription"
       		path="/WMSConfigDescription.do"/>
       	<forward
       		name="wmsConfigContent"
       		path="/WMSConfigContent.do"/>
       		       		
       	<forward
       		name="catalogConfigDataStores"
       		path="/catalogConfigDataStores.do"/>
       	<forward
       		name="catalogConfigNamespaces"
       		path="/catalogConfigNamespaces.do"/>
       	<forward
       		name="catalogConfigStyles"
       		path="/catalogConfigStyles.do"/>
       	<forward
       		name="catalogConfigFeatureTypes"
       		path="/catalogConfigFeatureTypes.do"/>       	       		
       		
