<struts-config>

<!-- ==================================== Data Source Configuration -->

<!-- ======================================== Form Bean Definitions -->

    <form-beans>
    	<form-bean
    		name="wfsDescriptionForm"
    		type="org.vfny.geoserver.form.wfs.WFSDescriptionForm"/>
    		
    	<form-bean
    		name="wfsContentForm"
    		type="org.vfny.geoserver.form.wfs.WFSContentForm"/>

    	<form-bean
    		name="wmsDescriptionForm"
    		type="org.vfny.geoserver.form.wms.WMSDescriptionForm"/>
    		
    	<form-bean
    		name="wmsContentForm"
    		type="org.vfny.geoserver.form.wms.WMSContentForm"/>

    	<form-bean
    		name="catalogDataStoresForm"
    		type="org.vfny.geoserver.form.data.CatalogDataStoresForm"/>
    		
    	<form-bean
    		name="catalogNamespacesForm"
    		type="org.vfny.geoserver.form.data.CatalogNamespacesForm"/>

    	<form-bean
    		name="catalogStylesForm"
    		type="org.vfny.geoserver.form.data.CatalogStylesForm"/>
    		
    	<form-bean
    		name="catalogFeatureTypesForm"
    		type="org.vfny.geoserver.form.data.CatalogFeatureTypesForm"/>
    		
    </form-beans>

<!-- ================================= Global Exception Definitions -->

    <global-exceptions>
    </global-exceptions>

<!-- =================================== Global Forward Definitions -->

