<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <bean id="restwrapper" class="org.geoserver.sldservice.WrappingController">
   <constructor-arg ref="data"/>
  </bean>
 
 <bean id="restDispatcherMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
<property name="alwaysUseFullPath" value="true"/>
<property name="mappings">
	<props>
		<prop key="/sldservice">restwrapper</prop>
		<prop key="/sldservice/**">restwrapper</prop>
	</props>
</property>

</bean>
</beans>
