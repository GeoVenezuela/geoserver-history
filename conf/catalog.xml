<?xml version="1.0" encoding="UTF-8"?>
<catalog>
  <datastores>
    <!--
    a datastore configuration element serves as a common data source connection
    parameters repository for all featuretypes it holds.
    -->
    <datastore id="bc_shapefile"
               enabled="true"
               namespace="topp">
      <description>British Columbia sample road shapefiles</description>
      <connectionParams>
        <!-- change the file to the location where geoserver puts the file.
             We're working on making this easier to configure, automatically detect it for you.  -->
        <parameter name="url" value="file:featureTypes/bc_roads/bc_roads.shp"/>
      </connectionParams>
    </datastore>

    <datastore id="dSkae"
               enabled="true"
               namespace="lakes">
      <description>Sample source data for lakes. Should not pass all validations.</description>
      <connectionParams>
        <parameter name="url" value="file:data/featureTypes/skae_lakes/skae_lakes.shp"/>
      </connectionParams>
    </datastore>
    
    <datastore id="cdf1"
               enabled="true"
               namespace="cdf">
      <connectionParams>
        <!-- change the file to the location where geoserver puts the file.
             We're working on making this easier to configure, automatically detect it for you.  -->
        <parameter name="url" value="file:data/featureTypes/cdf--Deletes/Deletes.shp"/>
      </connectionParams>
    </datastore> 
    
    <datastore id="cgf1"
               enabled="true"
               namespace="cgf">
               <!-- enabled is optional, defaults to true -->
      <description>A sample postgis testing database</description>
      <connectionParams>
        <parameter name="dbtype" value="postgis"/>
        <parameter name="host" value="hydra"/>
        <parameter name="port" value="5432"/>
        <parameter name="database" value="dzwiers"/>
        <parameter name="user" value="cite"/>
        <parameter name="passwd" value="cite"/>
      </connectionParams>
    </datastore> 
    
    <datastore id="cdf"
               enabled="true"
               namespace="cdf">
               <!-- enabled is optional, defaults to true -->
      <description>A sample postgis testing database</description>
      <connectionParams>
        <parameter name="dbtype" value="postgis"/>
        <parameter name="host" value="hydra"/>
        <parameter name="port" value="5432"/>
        <parameter name="database" value="dzwiers"/>
        <parameter name="user" value="cite"/>
        <parameter name="passwd" value="cite"/>
      </connectionParams>
    </datastore> 
    
    <datastore id="cgf"
               enabled="true"
               namespace="cgf">
               <!-- enabled is optional, defaults to true -->
      <description>A sample postgis testing database</description>
      <connectionParams>
        <parameter name="dbtype" value="postgis"/>
        <parameter name="host" value="hydra"/>
        <parameter name="port" value="5432"/>
        <parameter name="database" value="dzwiers"/>
        <parameter name="user" value="cite"/>
        <parameter name="passwd" value="cite"/>
      </connectionParams>
    </datastore> 
  </datastores>

  <namespaces>
	<namespace default="true" uri="http://www.opengis.net/cite/data"
	           prefix="cdf"/>
	<namespace uri="http://www.opengis.net/cite/geometry"
	           prefix="cgf"/>
    <namespace uri="http://www.refractions.net/lakes" 
	           prefix="lakes"/>
    <namespace uri="http://www.openplans.org/topp" 
	           prefix="topp"/>
  </namespaces>

  <styles>
      <style id="dotty" filename="funkypolyshp.sld"/>
      <style id="green" filename="green.sld"/>
      <style id="maleVsFemale" filename="usa_ratio.sld"/>
      <style id="normal" filename="normal.sld" default="true"/>
  </styles>

</catalog>