<!-- Transactions do not work on all systems with Shapefiles, which are    -->
<!-- the default for this demo.  PostGIS serves as a much better backend.  -->
<!-- Sometimes success will be reported but the transaction will not go    -->
<!-- through.  We include this transaction as a sample for deletes.        -->
<wfs:Transaction service="WFS" version="1.0.0"
  xmlns:cdf="http://www.opengis.net/cite/data"
  xmlns:ogc="http://www.opengis.net/ogc"
  xmlns:wfs="http://www.opengis.net/wfs">
  xmlns:topp="http://www.openplans.org/topp">
  <wfs:Delete typeName="topp:bc_roads">
    <ogc:Filter>
      <ogc:PropertyIsEqualTo>
        <ogc:PropertyName>topp:BTRN_BC_ID</ogc:PropertyName>
        <ogc:Literal>12947</ogc:Literal>
      </ogc:PropertyIsEqualTo>
    </ogc:Filter>
  </wfs:Delete>
</wfs:Transaction>
 
