<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
 	
	<!-- kvp bindings -->
	<bean id="bboxBinding"
		class="org.openplans.geoserver.gt.binding.BBoxBinding">
		<constructor-arg>
			<list>
				<value type="String">bbox</value>
			</list>
		</constructor-arg>
		<constructor-arg type="String" value="bbox"/>
	</bean>
		
	<bean id="dimensionBinding"
		class="org.openplans.geoserver.gt.binding.DimensionBinding">
		<constructor-arg>
			<list>
				<value type="String">height</value>
				<value type="String">width</value>
			</list>
		</constructor-arg>
		<constructor-arg type="String" value="dimension"/>
	</bean>
		
	<bean id="srsBinding"
		class="org.openplans.geoserver.gt.binding.SRSBinding">
		<constructor-arg>
			<list>
				<value type="String">srs</value>
			</list>
		</constructor-arg>
		<constructor-arg type="String" value="srs"/>
	</bean>
		
  <!--  the catalog -->
  <bean id="org.openplans.geoserver.gt.localCatalog"
    class="org.geotools.catalog.defaults.DefaultCatalog"/>

  <!-- service finder bean -->
  <bean id="org.openplans.geoserver.gt.serviceFinder"
    class="org.openplans.geoserver.gt.catalog.GSServiceFinder">
    <constructor-arg ref="org.openplans.geoserver.gt.localCatalog"/>
  </bean>

</beans>
