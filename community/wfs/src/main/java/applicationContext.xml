<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!-- factories -->
	<bean id="filterFactory" class="org.geotools.filter.FilterFactoryImpl"/>

	<!-- wfs configuration bean -->
	<bean id="wfs" class="org.geoserver.wfs.WFS">
		<property name="citeConformanceHacks" value="true" />
	</bean>
	
	<!-- wfs service -->
	<!--bean id="wfsService" class="org.geoserver.wfs.DefaultWebFeatureService">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
		<property name="filterFactory" ref="filterFactory"/>
	</bean-->
	<bean id="wfsServiceTarget" class="org.geoserver.wfs.DefaultWebFeatureService">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
		<property name="filterFactory" ref="filterFactory"/>
	</bean>

	<bean id="wfsLogger" class="org.geoserver.wfs.WFSLogger"/>
	<bean id="wfsService" class="org.springframework.aop.framework.ProxyFactoryBean">
	  <property name="proxyInterfaces">
	  	<value>org.geoserver.wfs.WebFeatureService</value>
	  </property>
	  <property name="interceptorNames">
	  	<list>
	  		<value>wfsLogger</value>
	  		<value>wfsServiceTarget</value>
	  	</list>
	  </property>
	</bean>
		
	<!-- service descriptors -->
	<bean id="wfsService-1.0.0" class="org.geoserver.ows.Service">
		<constructor-arg index="0" value="wfs"/>
		<constructor-arg index="1" ref="wfsService"/>
		<constructor-arg index="2" value="1.0.0"/>
	</bean>
	
	<bean id="wfsService-1.1.0" class="org.geoserver.ows.Service">
		<constructor-arg index="0" value="wfs"/>
		<constructor-arg index="1" ref="wfsService"/>
		<constructor-arg index="2" value="1.1.0"/>
	</bean>
	
	<!-- service exception handler -->
	<bean id="wfsExceptionHandler" class="org.geoserver.wfs.http.response.WfsExceptionHandler">
		<constructor-arg>
			<list>
				<ref bean="wfsService-1.0.0"/>
				<ref bean="wfsService-1.1.0"/>
			</list>		
		</constructor-arg>	
		<constructor-arg ref="wfs"/>
	</bean>
	
	<!-- persistance -->
	<!-- bean id="wfsPersister" class="org.geoserver.BeanPersister">
		<constructor-arg ref="resourceLoader"/>
		<property name="beans">
			<list>
				<value>wfs</value>				
			</list>
		</property>
	</bean-->
	
	<!-- schema catalog adapter -->
	<bean id="schemaAdapterFactory" class="org.geoserver.wfs.xml.SchemaAdapterFactory">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
		<constructor-arg ref="resourceLoader"/>
	</bean>
	
	
	<!-- responses -->
	<bean id="getCapabilitiesResponse"
		class="org.geoserver.wfs.http.response.TransformerResponse" singleton="false"/>
	<bean id="describeFeatureTypeResponse"
		class="org.geoserver.wfs.http.response.FeatureTypeInfoResponse" singleton="false"/>
	<bean id="getFeatureResponse"
		class="org.geoserver.wfs.http.response.FeatureCollectionTypeResponse" singleton="false">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="lockFeatureResponse"
		class="org.geoserver.wfs.http.response.LockFeatureTypeResponse" singleton="false">
		<constructor-arg ref="wfs"/>
	</bean>
	<bean id="transactionResponse-1.0.0"
		class="org.geoserver.wfs.http.response.TransactionResponse" singleton="false">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
	</bean>
		
	<!-- http url mapping -->
	<bean id="wfsURLMapping" 
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
	  		<list>
				 <ref bean="owsInitializer"/>
	  		</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="/wfs">dispatcher</prop>
				<prop key="/wfs/*">dispatcher</prop>
			</props>
		</property>
	</bean>
	
	
	<!-- kvp parsers -->
	<bean id="typeNameKvpParser" class="org.geoserver.wfs.http.kvp.TypeNameKvpReader">
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="featureIdKvpParser" class="org.geoserver.wfs.http.kvp.FeatureIdKvpReader"/>
	<bean id="bboxKvpParser" class="org.geoserver.wfs.http.kvp.BBoxKvpReader"/>
	<bean id="filterKvpParser" class="org.geoserver.wfs.http.kvp.FilterKvpReader"/>
	<bean id="propertyNameKvpParser" class="org.geoserver.wfs.http.kvp.PropertyNameKvpReader"/>
	<bean id="maxFeatureKvpParser" class="org.geoserver.wfs.http.kvp.MaxFeaturesKvpReader"/>
	<bean id="srsNameFeatureKvpParser" class="org.geoserver.wfs.http.kvp.SrsNameKvpReader"/>
	<bean id="sortByKvpParser" class="org.geoserver.wfs.http.kvp.SortByKvpReader">
		<constructor-arg ref="filterFactory"/>
	</bean>
	<bean id="expiryKvpParser" class="org.geoserver.wfs.http.kvp.ExpiryKvpReader"/>
	<bean id="resultTypeKvpParser" class="org.geoserver.wfs.http.kvp.ResultTypeKvpParser"/>
	<bean id="acceptVersionsKvpParser" class="org.geoserver.wfs.http.kvp.AcceptVersionsKvpParser"/>
	<bean id="acceptFormatsKvpParser" class="org.geoserver.wfs.http.kvp.AcceptFormatsKvpParser"/>

	<!-- kvp request readers -->
	<bean id="getCapabilitiesKvpReader"  
		class="org.geoserver.wfs.http.kvp.GetCapabilitiesKvpRequestReader"/>

	<bean id="describeFeatureTypeKvpReader" 
		class="org.geoserver.wfs.http.kvp.DescribeFeatureTypeKvpRequestReader"/>

	<bean id="getFeatureKvpReader" class="org.geoserver.wfs.http.kvp.GetFeatureKvpRequestReader">
		<constructor-arg value="net.opengis.wfs.GetFeatureType"/>
		<constructor-arg ref="catalog"/>
		<constructor-arg ref="filterFactory"/>
	</bean>
	<bean id="getFeatureWithLockKvpReader" class="org.geoserver.wfs.http.kvp.GetFeatureKvpRequestReader">
		<constructor-arg value="net.opengis.wfs.GetFeatureWithLockType"/>
		<constructor-arg ref="catalog"/>
		<constructor-arg ref="filterFactory"/>
	</bean>
	<bean id="lockFeatureKvpReader" class="org.geoserver.wfs.http.kvp.WFSKvpRequestReader">
		<constructor-arg value="net.opengis.wfs.LockFeatureType"/>
	</bean>
	<bean id="transactionKvpReader" class="org.geoserver.wfs.http.kvp.WFSKvpRequestReader">
		<constructor-arg value="net.opengis.wfs.TransactionType"/>
	</bean>
	<bean id="releaseLockKvpReader" class="org.geoserver.wfs.http.kvp.ReleaseLockKvpRequestReader"/>
	
	<!-- 1.0 xml readers -->
	<bean id="getCapabilitiesXmlReader"
		class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="GetCapabilities"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="describeFetureTypeXmlReader"
		class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="DescribeFeatureType"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="getFeatureXmlReader" class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="GetFeature"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="getFeatureWithLockXmlReader" class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="GetFeatureWithLock"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="lockFeatureXmlReader" class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="LockFeature"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="transactionXmlReader" class="org.geoserver.wfs.xml.v1_0_0.WfsXmlReader">
		<constructor-arg value="Transaction"/>
		<constructor-arg ref="catalog"/>
	</bean>
	
	<!-- 1.1 xml readers -->
	<bean id="xmlReader-1.1.0" class="org.geoserver.wfs.xml.v1_1_0.WfsXmlReader" abstract="true">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="getCapabilitiesXmlReader-1.1.0" parent="xmlReader-1.1.0">
		<constructor-arg type="java.lang.String" value="GetCapabilities"/>
	</bean>
	<bean id="describeFeatureTypeXmlReader-1.1.0" parent="xmlReader-1.1.0">
		<constructor-arg value="DescribeFeatureType"/>
	</bean>
	<bean id="getFeatureTypeXmlReader-1.1.0" parent="xmlReader-1.1.0">
		<constructor-arg value="GetFeature"/>
	</bean>
	<bean id="lockFeatureXmlReader-1-1.0" parent="xmlReader-1.1.0">
		<constructor-arg value="LockFeature"/>
	</bean>
	<bean id="transactionXmlReader-1.1.0" parent="xmlReader-1.1.0">
		<constructor-arg value="Transaction"/>
	</bean>
	
	<!-- default feature type encoders -->
	<bean id="gml2FeatureTypeEncoder" 
		class="org.geoserver.wfs.xml.v1_0_0.XmlSchemaEncoder">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="gml3FeatureTypeEncoder" 
		class="org.geoserver.wfs.xml.v1_1_0.XmlSchemaEncoder">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
		<constructor-arg ref="resourceLoader"/>
	</bean>
	<!-- default get feature producers -->
	<bean id="gml2FeatureProducer" 
		class="org.geoserver.wfs.GML2FeatureProducer" singleton="false">
		<constructor-arg ref="wfs"/>
		<constructor-arg ref="catalog"/>
	</bean>
	<bean id="gml3FeatureProducer" class="org.geoserver.wfs.xml.GML3FeatureProducer2" 
		parent="gml2FeatureProducer">
		<constructor-arg ref="resourceLoader"/>
	</bean>
		

</beans>