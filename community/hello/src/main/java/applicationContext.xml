<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- the hw service. -->
	<bean id="hw"
		class="org.vfny.geoserver.global.HelloWorld">
		
	</bean>
			
	<!-- the abstract wfs specific bean  -->
	<bean id="hwService" 
		class="org.vfny.geoserver.sample.servlets.HelloWorldService">	
		<!-- reference to wfs bean in this context -->
		<constructor-arg ref="hw"/>
	</bean>
			
</beans>