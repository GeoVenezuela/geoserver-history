<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server
    PUBLIC "-//JBoss//DTD MBean Service 3.2//EN"
    "http://www.jboss.org/j2ee/dtd/jboss-service_3_2.dtd">
<server>
	<loader-repository>sisdemo:loader=sisdemo.ear</loader-repository>
	
	<mbean code="it.ama_mi.sis.framework.j2ee.SISModuleLoaderService"
		name="sisdemo:service=SISModule,name=sisdemometauser">
		<attribute name="SISInstanceName">sisdemo</attribute>
		<attribute name="Id">sisdemometauser</attribute>
		<attribute name="MetaSpaceLoaderClassName">
			it.ama_mi.sis.framework.security.geotools.DataStoreSecurityMetaSpaceLoader
		</attribute>
		<attribute name="DataStoreProperties">
			directory=../server/sis/deploy/sisdemo.ear/geoserver.war/data/featureTypes/security/
<!--
			dbtype=postgis
			host=localhost
			port=5432
			database=sis
			user=postgres
			passwd=postgres
-->
		</attribute>
		<depends>sisdemo:service=SISMetaSpaceService</depends>
	</mbean>
</server>