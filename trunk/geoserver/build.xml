	<echo>If you get an error here, you probably need to edit the geoserver.nsi file and edit the variable "OutFile" to match the version number.</echo>
	<copy file="${dir.build}/installer/geoserver/geoserver-${name.release}.exe" todir="${dir.release}" />
	<delete dir="${dir.build}/installer"/>
</target>
	
	
