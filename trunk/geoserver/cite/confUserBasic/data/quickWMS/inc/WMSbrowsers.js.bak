// Sets the position and size of a specified layer
function setLayerPos(layerName,left, top, width, height)
{
	if (browser.isOldNS){

	}
	else{
		layer = getLayer(layerName).style;
		if (left) layer.left=left;
		if (top) layer.top=top;
		if (width) layer.width=width;
