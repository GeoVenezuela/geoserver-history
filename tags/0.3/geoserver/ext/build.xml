<project name="extras" basedir="." default="packageAll">

	<property name="version" value="1.3.0"/>

	<target name="init">
		<delete dir="dist"/>
		<mkdir dir="dist"/>
	</target>

	<target name="packageAll" depends="init">
		<antcall target="package">	
			<param name="ds" value="wfs"/>
		</antcall>
		<antcall target="package">	
			<param name="ds" value="db2"/>
		</antcall>
		<antcall target="package">	
			<param name="ds" value="mysql"/>
		</antcall>
		<antcall target="package">	
			<param name="ds" value="vpf"/>
		</antcall>
	</target>

	<target name="package">
		<zip destfile="dist/geoserver-${version}-${ds}-ext.zip" basedir="${ds}"/>
	</target>

</project>
