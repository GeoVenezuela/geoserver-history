<project>
	<target name="config">
		<available file="${basedir}/${configId}.zip" property="configIsAvailable"/>
		<fail message="Unable to obtain configuration file: ${basedir}/${configId}.zip" unless="configIsAvailable"/>
		<mkdir dir="${webappSourceDirectory}/conf"/>
		<unzip src="${basedir}/${configId}.zip" dest="${webappSourceDirectory}/conf"/>
	</target>

	<target name="clean">
		<echo message="Deleting ${webappSourceDirectory}/conf"/>
		<delete dir="${webappSourceDirectory}/conf"/>
	</target>
</project>
